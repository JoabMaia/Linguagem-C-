#include<iostream>
#include<stdio.h>
#include<stdlib.h>

using namespace std;

int main(){

    double base_menor, base_maior, altura, area;
    
    cin >> base_menor;
    cin >> base_maior;
    cin >> altura;

    area = ((base_maior + base_menor) * altura)/2;

    printf("%.1lf\n", area);
    
    return 0;

}
